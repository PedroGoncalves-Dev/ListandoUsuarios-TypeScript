{
  "compilerOptions": {
    "target": "ES2023", // Atualizado para manter consistência com o lib
    "lib": ["ES2023"], // Mantido como ES2023
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler", // Correto para uso com Vite
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true, // O Vite cuida da transpilação e geração de arquivos

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["vite.config.ts"] // Certifique-se que quer apenas o vite.config.ts incluído
}
